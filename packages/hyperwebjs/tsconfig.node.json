{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/cjs",
    "rootDir": "src/",
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.*", "**/*.test.*"]
}
